module examples::checker_board;

import "std/os/linux.cerm";

fn print(str []const u8) {
    std::os::linux::write(std::os::linux::STDOUT, str.ptr as usize, str.len);
}

fn main() {
    var i s32 = 0;

    while (i = i + 1) < 9 {
        var j s32 = 0;

        while (j = j + 1) < 9 {
            if (i + j) % 2 == 0 {
                print("\e[47m  \e[0m");
            } else {
                print("\e[100m  \e[0m");
            }
        }

        print("\n");
    }
}
