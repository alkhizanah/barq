module examples::hello;

import "std/os/linux/x86_64.cerm";

// TODO: We don't support slices yet
fn strlen(str [*]const u8) usize {
    var len usize = 0;

    while str[len] != 0 {
        len = len + 1;
    }

    return len;
}

const STDOUT = 1;

fn print(str [*]const u8) {
    std::os::linux::x86_64::write(STDOUT, str as usize, strlen(str));
}

fn main() {
    print("Hello, World!\n");
}
